+++ rpm-5.4.15/scripts/haskelldeps.sh	2014-09-05 03:16:55.103817995 +0200
@@ -0,0 +1,40 @@
+#!/bin/sh
+
+# Haskell dependency extractor.
+#
+# Author(s):	Olivier Thauvin <nanardon@mandriva.org> 
+#		Per Ã˜yvind Karlsen <peroyvind@mandriva.org>
+# 
+
+provides=0
+requires=0
+
+while [ "$#" -ne 0 ]; do
+    case $1 in
+	-P|--provides)
+	    provides=1
+	    ;;
+	-R|--requires)
+	    requires=1
+	    ;;
+    esac
+    shift
+done
+
+finddeps () {
+    while read file; do
+	case "$file" in
+	    */usr/share/haskell-deps/*/$1)
+		cat "$file" | grep -v '^\s*$'
+		;;
+	esac
+    done
+}
+
+if [ $provides -eq 1 ]; then
+    finddeps provides
+fi
+
+if [ $requires -eq 1 ]; then
+    finddeps requires
+fi
